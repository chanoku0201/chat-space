.side
  .side__top
    .side__top__box
      .side__top__box__user-name
        = current_user.name
      .side__top__box__menu
        .side__top__box__menu__new-group
          = link_to new_group_path do
            = fa_icon 'edit', class: 'icon'
        .side__top__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'


  .side__body
    - current_user.groups.each do |group|
      .side__body__group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .latest-message
            = group.show_last_message